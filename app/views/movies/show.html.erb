<div class="banner position-relative"
  style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @list.photo.attached? ? (cl_image_path @list.photo.key) : (image_path('film_redux_logo_white')) %>'); top: 70px;"
>
  <div class="btn btn-warning fw-bold text-white px-3 position-absolute border border-0 rounded-4" style="bottom: 20px; right: 20px;"><%= @list.bookmarks.count %> <%= 'movie'.pluralize(@list.bookmarks.count) %></div>
  <div class="container text-center">
    <h1 class="fs-1 pb-3"><%= @list.name %> Movies</h1>
  </div>
</div>

<div class="container position-relative w-75 my-5" style="top: 80px;">
  <h1><%= @movie.title %></h1>

  <p>Rating: <%= @movie.rating %></p>

  <h2>Overview</h2>
  <p><%= @movie.overview %></p>

  <%= link_to 'Back', list_path(@list), class: 'btn btn-primary my-4' %>
</div>
